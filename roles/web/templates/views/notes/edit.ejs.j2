<%- include('../layout', { title: 'ノート編集 | EduNotes', body: `
<section class="container">
  <div class="hero">
    <span class="badge">ノート編集</span>
    <h1 class="hero__title">学習メモを整える。</h1>
    <p class="hero__subtitle">見直しやすく、情報を整理して更新します。</p>
  </div>

  <div class="section card">
    <form class="form" method="post" action="/notes/${n.id}">
      <input type="hidden" name="_csrf" value="${csrfToken}">
      <label>タイトル</label>
      <input type="text" name="title" value="${n.title.replace(/"/g,'&quot;')}" required>
      <label>本文（Markdown）</label>
      <textarea name="body_md" rows="12">${(n.body_md || '').replace(/</g,'&lt;')}</textarea>
      <label>
        <input type="checkbox" name="is_public" ${n.is_public ? 'checked' : ''}> このノートを公開する
      </label>
      <div style="display:flex; gap:12px; flex-wrap:wrap;">
        <button class="btn btn--primary" type="submit">変更を保存</button>
        <a class="btn btn--ghost" href="/notes/${n.id}">キャンセル</a>
      </div>
    </form>
  </div>
</section>
` }) %>
