<%- include('../layout', { title: '学習ガイド | EduNotes', body: `
<section class="container">
  <div class="hero">
    <span class="badge">学習ガイド</span>
    <h1 class="hero__title">すぐに答えを見つける。</h1>
    <p class="hero__subtitle">学習の進め方、ノート、進捗管理をまとめています。</p>
  </div>

  <div class="section">
    <h2 class="section__title">ガイド一覧</h2>
    ${(!files || !files.length) ? `
      <div class="card">
        <p>ガイドがまだありません。</p>
      </div>
    ` : `
      <div class="grid">
        ${files.map(f => {
          const slug = f.replace(/\\.md$/i,'');
          return `
            <a class="card" href="/docs/${slug}">
              <div class="card__eyebrow">ガイド</div>
              <h3>${f}</h3>
              <p class="muted">開く</p>
            </a>
          `;
        }).join('')}
      </div>
    `}
  </div>
</section>
` }) %>
