# ansible/roles/web/templates/nginx.conf.j2
server {
  listen 80 default_server;
  listen [::]:80 default_server;
  server_name _;

  root /opt/edunotes/public;
  index index.html;   # ← 追加：静的ホームを有効に

  location /assets/ {
    try_files $uri =404;
    access_log off;
    expires 7d;
  }

  # ヘルスチェックは Nginx が直接 200 を返す（ALB安定化）
  location = /healthz {
    return 200 "ok\n";
    add_header Content-Type text/plain;
    access_log off;
  }

  # ── 追加：ランディング & アップローダを静的で返す ──
  location = / {
    try_files /index.html =404;
  }
  location = /index.html {
    try_files /index.html =404;
  }
  location = /uploader {
    try_files /uploader.html =404;
  }
  location = /uploader.html {
    try_files /uploader.html =404;
  }
  # ────────────────────────────────────────────────

  # アプリへのプロキシ（/notes, /login 等はこの汎用ルールで引き続きOK）
  location / {
    proxy_pass         http://127.0.0.1:3000;
    proxy_http_version 1.1;
    proxy_set_header   Host $host;
    proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Upgrade $http_upgrade;
    proxy_set_header   Connection "upgrade";
    proxy_read_timeout 60s;
    proxy_redirect     off;
  }

  # アプリ側の準備状態/メトリクスは必要なら素通し
  location = /readyz {
    proxy_pass         http://127.0.0.1:3000/readyz;
    proxy_http_version 1.1;
    proxy_set_header   Connection "";
    access_log off;
  }

  location = /metrics {
    proxy_pass         http://127.0.0.1:3000/metrics;
    proxy_http_version 1.1;
    proxy_set_header   Connection "";
    access_log off;
  }

  client_max_body_size 50m;
  sendfile on;
  keepalive_timeout 65;

  access_log /var/log/nginx/edunotes_access.log;
  error_log  /var/log/nginx/edunotes_error.log;
}
