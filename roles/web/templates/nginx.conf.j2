server {
  listen 80 default_server;
  listen [::]:80 default_server;
  server_name _;

  root /opt/edunotes/public;
  index index.html;

  # ← これを追加（/api 配下は必ず Node に送る）
  location ^~ /api/ {
    proxy_pass         http://127.0.0.1:3000;
    proxy_http_version 1.1;
    proxy_set_header   Host $host;
    proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_read_timeout 60s;
    proxy_redirect     off;
  }

  location /assets/ {
    try_files $uri =404;
    access_log off;
    expires 7d;
  }

  location = /healthz { return 200 "ok\n"; add_header Content-Type text/plain; access_log off; }

  # 静的トップ
  location = /         { try_files /index.html =404; }
  location = /index.html { try_files /index.html =404; }
  location = /uploader   { try_files /uploader.html =404; }
  location = /uploader.html { try_files /uploader.html =404; }

  # 汎用プロキシ（/api 以外）
  location / {
    proxy_pass         http://127.0.0.1:3000;
    proxy_http_version 1.1;
    proxy_set_header   Host $host;
    proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Upgrade $http_upgrade;
    proxy_set_header   Connection "upgrade";
    proxy_read_timeout 60s;
    proxy_redirect     off;
  }

  location = /readyz  { proxy_pass http://127.0.0.1:3000/readyz;  proxy_set_header Connection ""; access_log off; }
  location = /metrics { proxy_pass http://127.0.0.1:3000/metrics; proxy_set_header Connection ""; access_log off; }

  client_max_body_size 50m;
  sendfile on;
  keepalive_timeout 65;

  access_log /var/log/nginx/edunotes_access.log;
  error_log  /var/log/nginx/edunotes_error.log;
}
