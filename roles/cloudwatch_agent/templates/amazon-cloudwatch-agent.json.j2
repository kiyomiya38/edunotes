{
  "agent": {
    "run_as_user": "root",
    "region": "{{ aws_region | default('ap-northeast-3') }}"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/nginx/access.log",
            "log_group_name": "/edunotes/nginx/access",
            "log_stream_name": "{instance_id}"
          },
          {
            "file_path": "/var/log/nginx/error.log",
            "log_group_name": "/edunotes/nginx/error",
            "log_stream_name": "{instance_id}"
          },
          {
            "file_path": "/var/log/edunotes/app.log",
            "log_group_name": "/edunotes/app",
            "log_stream_name": "{instance_id}"
          }
        ]
      }
    }
  },
  "metrics": {
    "append_dimensions": {
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
      "InstanceId": "${aws:InstanceId}"
    },
    "aggregation_dimensions": [
      ["AutoScalingGroupName"],
      ["InstanceId"]
    ],
    "metrics_collected": {
      "cpu": {
        "measurement": ["cpu_usage_idle", "cpu_usage_user", "cpu_usage_system"],
        "resources": ["*"],
        "totalcpu": true,
        "metrics_aggregation_interval": 60
      },
      "mem": {
        "measurement": ["mem_used_percent", "mem_available_percent"],
        "metrics_aggregation_interval": 60
      },
      "swap": {
        "measurement": ["swap_used_percent"],
        "metrics_aggregation_interval": 60
      },
      "disk": {
        "measurement": ["used_percent"],
        "resources": ["*"],
        "ignore_file_system_types": ["sysfs", "devtmpfs", "tmpfs", "overlay"],
        "metrics_aggregation_interval": 60
      },
      "net": {
        "measurement": ["bytes_sent", "bytes_recv"],
        "metrics_aggregation_interval": 60
      }
    }
  }
}
